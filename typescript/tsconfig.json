{
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 5,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "../www/scripts",
    "paths": {
      "/vendor/*.js": ["../node_modules/*"]
    }
  },
  "exclude": ["scripts", "workers", "base", "data"]
}
