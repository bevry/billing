{
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 5,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "../www/scripts",
    "paths": {
      "/vendor/*.js": ["../node_modules/*"]
    }
  },
  "exclude": ["scripts", "workers", "base", "data"]
}
