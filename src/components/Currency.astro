---
import type { Currency } from '../types'
export interface Props {
	amount: number
	currency: Currency
	gst?: boolean
}
const { amount, currency, gst } = Astro.props
const currencyFormatter = new Intl.NumberFormat('en-US', {
	style: 'currency',
	currencyDisplay: 'code',
	currency,
})
const result = currencyFormatter.format(amount)
---

{result}
{
	gst && (
		<>
			{'('}includes the required{' '}
			<Astro.self amount={amount * 0.1} currency={currency} /> for the
			Australian Goods & Services Tax{')'}
		</>
	)
}
