    "bevry",
    "billing",
    "invoices",
    "invoice",
    "website",
    "cloudflare-worker"
  ],
  "badges": {
    "list": [
      "travisci",
      "---",
      "patreon",
      "flattr",
      "liberapay",
      "thanksapp",
      "boostlab",
      "buymeacoffee",
      "opencollective",
      "crypto",
      "paypal",
      "wishlist"
    ],
    "config": {
      "buymeacoffeeUsername": "balupton",
      "cryptoURL": "https://bevry.me/crypto",
      "flattrUsername": "balupton",
      "liberapayUsername": "bevry",
      "opencollectiveUsername": "bevry",
      "patreonUsername": "bevry",
      "paypalURL": "https://bevry.me/paypal",
      "wishlistURL": "https://bevry.me/wishlist"
    }
  },
  "author": "2017+ Benjamin Lupton <b@lupton.cc>",
  "maintainers": [
    "Benjamin Lupton <b@lupton.cc>"
  ],
  "bugs": {
    "url": "https://github.com/bevry/billing/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bevry/billing.git"
  },
  "engines": {
    "node": ">=8"
  },
  "editions": [
    {
      "description": "source",
      "directory": ".",
      "entry": "",
      "tags": [
        "typescript",
        "html",
        "css",
        "import"
      ]
    }
  ],
  "type": "module",
  "devDependencies": {
    "@pika/web": "^0.6.1",
    "@types/hyperscript": "^0.0.3",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-bevry": "^1.2.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.17.0",
    "projectz": "^1.7.4",
    "serve": "^11.0.0",
    "simplytyped": "^3.1.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "our:clean": "rm -Rf ./docs ./edition* ./es2015 ./es5 ./out ./.next ./www/index.json ./www/scripts ./www/vendor",
    "our:compile": "yarn run our:compile:modules && yarn run our:compile:typescript && yarn run our:compile:data",
    "our:compile:typescript": "pushd typescript/ && tsc && popd",
    "our:compile:data": "ts-node ./typescript/scripts/compile.ts",
    "our:compile:modules": "pika-web --clean --optimize --dest www/vendor",
    "our:watch": "yarn run our:watch:typescript",
    "our:watch:typescript": "pushd typescript/ && tsc --watch && popd",
    "our:deploy": "yarn run deploy",
    "our:meta": "yarn run our:meta:projectz",
    "our:meta:projectz": "projectz compile",
    "our:release": "yarn run our:release:prepare && yarn our:release:push",
    "our:release:prepare": "yarn run our:clean && yarn run our:compile && yarn run our:test && yarn run our:meta",
    "our:release:push": "git push origin master && git push origin --tags",
    "our:setup": "yarn run our:setup:install",
    "our:setup:install": "yarn install --ignore-engines",
    "our:test": "yarn run our:verify && yarn test",
    "our:verify": "yarn run our:verify:eslint && yarn run our:verify:stylelint",
    "our:verify:eslint": "eslint --fix --ignore-pattern '**/*.d.ts' --ignore-pattern '**/vendor/' --ignore-pattern '**/node_modules/' --ext .mjs,.js,.jsx,.ts,.tsx .",
    "our:verify:stylelint": "echo 'disabled due to https://spectrum.chat/zeit/general/resolved-deployments-fail-with-enospc-no-space-left-on-device-write~d1b9f61a-65e8-42a3-9042-f9c6a6fae6fd'",
    "test": "echo no need for this project",
    "start": "yarn run our:clean && yarn run our:compile && serve ./www/",
    "prepare": "yarn run our:compile:modules",
    "deploy": "yarn run our:release:prepare && surge www/ billing.bevry.me"
  },
  "eslintConfig": {
    "extends": [
      "bevry"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "currency-formatter": "^1.5.3",
    "daet": "^1.2.0",
    "lit-html": "^1.0.0",
    "surge": "^0.21.3"
  },
  "contributors": [
    "Benjamin Lupton (http://balupton.com)"
  ]
}
